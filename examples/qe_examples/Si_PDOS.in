   ngauss  = 0 ,
   degauss = 0.01 , ! in Ry
   DeltaE  = 0.01 ,  ! in eV
   Emax = 10
   Emin = -10
   
   prefix  = 'si_lda' ,
   outdir  = './out/' ,
   filpdos = 'Si' ,
   !lsym = .false.
   lwrite_overlaps = .true.
   !kresolveddos = .true.
   !diag_basis = .true.
/
